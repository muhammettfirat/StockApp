@model StockTypeListModel
@{
    Layout = "_Layout";
}

<br />
<br />
<br />
<div class="container" style="padding-left: 50px; padding-right: 50px;">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Update">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Ad</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Approval" class="control-label">Approval</label>
                    <input asp-for="Approval" class="form-control" />
                    <span asp-validation-for="Approval" class="text-danger"></span>
                </div>
                <br />
              
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    <a asp-action="List" class="btn btn-secondary">Listeye Geri Dön</a>
                </div>
            </form>
        </div>
    </div>

</div>
<br />
<br />
<br />
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}