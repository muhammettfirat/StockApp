@model GetListUserModel
@{
    Layout = "_Layout";
}

<form class="w-75 m-5 p-3  mx-auto" asp-action="Update" asp-controller="User" method="post">
    <input type="hidden" asp-for="@Model.Id" />

    <div class="mb-3">
        <label for="@Model.Name" class="form-label">Kişi Adı :</label>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
        <input type="text" class="form-control" asp-for="@Model.Name" />
    </div>
    <div class="mb-3">
        <label for="@Model.UserName" class="form-label">Kullanıcı Adı :</label>
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
        <input type="text" class="form-control" asp-for="@Model.UserName" />
    </div>
    <div class="mb-3">
        <label for="@Model.Email" class="form-label">Email :</label>
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
        <input type="text" class="form-control" asp-for="@Model.Email" />
    </div>
    <div class="mb-3">
        <label for="@Model.Password" class="form-label">Şifre :</label>
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
        <input type="text" class="form-control" asp-for="@Model.Password" />
    </div>
    <div class="mb-3">
        <label for="@Model.AppRoleId" class="form-label">Rol :</label>
        <span asp-validation-for="@Model.AppRoleId" class="text-danger"></span>
        <input type="text" class="form-control" asp-for="@Model.AppRoleId" />
    </div>
    <div class="mb-3">
        <button class="btn btn-primary w-100">Kaydet</button>
    </div>


    <div class="mb-3">
        <button class="btn btn-primary w-100">Kaydet</button>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger">
    </div>
</form>